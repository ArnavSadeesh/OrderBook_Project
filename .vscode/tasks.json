{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build App",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++20",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-I${workspaceFolder}/include",        
        "${workspaceFolder}/src/*.cpp",        
        "${workspaceFolder}/main.cpp",         
        "-o",
        "${workspaceFolder}/build/app"         
      ],
      "group": {
        "kind": "build",
        "isDefault": true                     
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Tests",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++20",
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-pthread",                             
        "-I${workspaceFolder}/include",       
        "-I${workspaceFolder}/External/googletest/include",  
                                               
        "-I${workspaceFolder}/Testing",        
        "${workspaceFolder}/Testing/*.cpp",  
        "${workspaceFolder}/src/*.cpp",         
        "${workspaceFolder}/External/build/lib/libgtest.a",
                                                
        "-o",
        "${workspaceFolder}/build/test_runner" 
      ],
      "group": "none",                         
      "problemMatcher": ["$gcc"]
    }
  ]
}